<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Launcher" parent="DayNight.AppTheme.Launcher">
        <item name="launchScreenBackgroundColor">?colorSurface</item>
    </style>

    <style name="AppTheme" parent="DayNight.AppTheme">
        <item name="colorPrimary">@color/md_lightBlue_400</item>
        <item name="colorPrimaryDark">@color/md_lightBlue_600</item>
        <item name="colorAccent">@color/md_lightBlue_A400</item>
        <item name="secondaryColorOnPrimary">@color/white_80</item>
        <item name="secondaryColorOnToolbar">?secondaryColorOnPrimary</item>
        <item name="colorSurfaceSecondary">@color/surfaceColorSecondary_dark</item>
        <item name="textEmphasisColor">?colorAccent</item>
        <item name="colorControlNormalStateless">#B2FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarLayout.Colored" parent="">
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="colorControlNormal">?attr/colorOnSurface</item>
        <item name="android:editTextColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?secondaryColorOnPrimary</item>
        <item name="colorOnToolbar">?colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.TabLayout.GrammarPoint" parent="Widget.MaterialComponents.TabLayout" />

</resources>
