<resources>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="DayNight.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="chuiColor">@color/chuiTextColor</item>
        <item name="colorOnToolbar">?colorOnSurface</item>
    </style>

    <style name="AppTheme" parent="DayNight.AppTheme">
        <item name="secondaryColorOnToolbar">?colorOnToolbar</item>
        <item name="textEmphasisColor">?colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarLayout" parent="AppTheme">
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="colorPrimary">?colorSurface</item>
    </style>

    <style name="AppTheme.AppBarLayout.Colored" parent="">
        <item name="android:textColorPrimary">?attr/colorOnPrimarySurface</item>
        <item name="colorControlNormal">?attr/colorOnPrimarySurface</item>
        <item name="android:editTextColor">?attr/colorOnPrimarySurface</item>
        <item name="android:textColorHint">@color/secondary_color_on_primary</item>
        <item name="colorOnToolbar">?colorOnPrimarySurface</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <!-- Toolbar should always be within an AppBarLayout which provides the background. -->
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.App.Toolbar.Colored" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <!-- Toolbar should always be within an AppBarLayout which provides the background. -->
        <item name="android:background">@null</item>
    </style>

    <style name="TextAppearance.App.GrammarPointTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Widget.JlptProgress.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/jlpt_progressbar_height</item>
        <item name="android:indeterminate">false</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:max">100</item>
    </style>

    <style name="Widget.JlptProgress.LevelText" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.JlptProgress.CountText" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

</resources>
