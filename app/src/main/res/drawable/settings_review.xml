<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque"
    >

    <item>
        <shape android:shape="oval">
            <solid android:color="?colorPrimary" />
            <size
                android:width="@dimen/settings_icon_size"
                android:height="@dimen/settings_icon_size"
                />
        </shape>
    </item>

    <item
        android:bottom="@dimen/settings_icon_padding"
        android:drawable="@drawable/ic_school_24"
        android:left="@dimen/settings_icon_padding"
        android:right="@dimen/settings_icon_padding"
        android:top="@dimen/settings_icon_padding"
        />

</layer-list>

