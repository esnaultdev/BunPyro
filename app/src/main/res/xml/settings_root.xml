<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="category_display"
        app:title="@string/settings_root_category_display"
        >

        <ListPreference
            app:defaultValue="system"
            app:entries="@array/nightMode_entries"
            app:entryValues="@array/nightMode_values"
            app:key="night_mode"
            app:title="@string/settings_root_nightMode"
            />

        <ListPreference
            app:defaultValue="shown"
            app:entries="@array/furiganaDefault_entries"
            app:entryValues="@array/furiganaDefault_values"
            app:key="furigana_default"
            app:title="@string/settings_root_furiganaDefault"
            />

        <ListPreference
            app:defaultValue="hidden"
            app:entries="@array/exampleDetails_entries"
            app:entryValues="@array/exampleDetails_values"
            app:key="example_details"
            app:title="@string/settings_root_exampleDetails"
            />

        <ListPreference
            app:defaultValue="normal"
            app:entries="@array/hankoDisplay_entries"
            app:entryValues="@array/hankoDisplay_values"
            app:key="hanko_display"
            app:title="@string/settings_root_hankoDisplay"
            />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="category_about"
        app:title="@string/settings_root_category_about"
        >

        <Preference
            app:key="about_app"
            app:title="@string/settings_root_about"
            />

        <Preference
            app:key="about_privacy"
            app:title="@string/settings_root_privacy"
            />

        <Preference
            app:key="about_licenses"
            app:title="@string/settings_root_licenses"
            />

        <Preference
            app:key="about_version"
            app:title="@string/settings_root_version"
            />

    </PreferenceCategory>

</PreferenceScreen>
