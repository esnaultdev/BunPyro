<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        style="@style/Dialog.List.Title"
        android:layout_marginTop="8dp"
        android:text="@string/allGrammar_filterDialog_jlpt"
        />

    <include
        android:id="@+id/jlptN5"
        layout="@layout/dialog_item_multichoice"
        />

    <include
        android:id="@+id/jlptN4"
        layout="@layout/dialog_item_multichoice"
        />

    <include
        android:id="@+id/jlptN3"
        layout="@layout/dialog_item_multichoice"
        />

    <include
        android:id="@+id/jlptN2"
        layout="@layout/dialog_item_multichoice"
        />

    <include
        android:id="@+id/jlptN1"
        layout="@layout/dialog_item_multichoice"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.1"
        android:background="?colorOnSurface"
        />

    <TextView
        style="@style/Dialog.List.Title"
        android:text="@string/allGrammar_filterDialog_study"
        />

    <include
        android:id="@+id/study_studied"
        layout="@layout/dialog_item_multichoice"
        />

    <include
        android:id="@+id/study_notStudied"
        layout="@layout/dialog_item_multichoice"
        />

</LinearLayout>
